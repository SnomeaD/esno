h2 Weekly Progress

i(data-ng-hide="toonsData || error").fa.fa-spinner.fa-spin
div.alert.alert-info(data-ng-show="error")
    span {{error}}
div.container-fluid
    div.row(data-ng-show="toonsData")
        table.summary-raid
            tbody
                tr.icons
                    td.summary
                        div
                    td.spacer
                        div
                    td.en
                        div.icon Emerald Nightmare
                    td.spacer
                        div
                    td.tov
                        div.icon Trial of Valor
                    td.spacer
                        div
                    td.nh
                        div.icon Nigthold
                    td.spacer
                        div
                    td.tos
                        div.icon Tomb of Sargeras
                tr(ng-repeat="toon in toonsData | orderBy:'-averageItemLevel'" class="{{toon.class | class}}-lite")
                    td(rowspan=4 class="{{toon.class | class}}").summary-toon
                        img(ng-src="{{toon.thumbnail}}" height="64px" width="64px").img-circle.img-avatar
                        div.toon-info
                            div
                                h5 {{toon.name}}
                            div {{toon.realm}}
                            div {{toon.averageItemLevelEquipped}}/{{toon.averageItemLevel}}
                    td.spacer(ng-repeat-end)
                        div
                    td(ng-repeat-start="raid in toon.progress")
                        summary-status-detail(raid="raid" difficulty="'lfr'")
                        summary-status-detail(raid="raid" difficulty="'nm'")
                        summary-status-detail(raid="raid" difficulty="'hm'")
                        summary-status-detail(raid="raid" difficulty="'mm'")
                    td.spacer(ng-repeat-end)
                        div
